# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blockchain_indexer
DB_USER=postgres
DB_PASSWORD=password

# ============================================
# ETHEREUM CONFIGURATION
# ============================================
# Free public RPCs for real-time data (no API key needed):
# - https://cloudflare-eth.com (default, reliable)
# - https://rpc.ankr.com/eth
# - https://eth.llamarpc.com
# - https://ethereum.publicnode.com
ETH_RPC_URL=https://cloudflare-eth.com
ETH_NETWORK_ID=1
ETH_CONFIRMATIONS=12
ETH_BATCH_SIZE=10

# ============================================
# BITCOIN CONFIGURATION
# ============================================
# Free public APIs for real-time data (no API key needed):
# - https://blockstream.info/api (default)
# - https://mempool.space/api
BTC_RPC_URL=https://blockstream.info/api
BTC_RPC_USER=rpcuser
BTC_RPC_PASSWORD=rpcpassword
BTC_NETWORK_ID=2
BTC_CONFIRMATIONS=6
BTC_BATCH_SIZE=5

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# CRON CONFIGURATION
# ============================================
ETH_CRON_INTERVAL=*/15 * * * * *
BTC_CRON_INTERVAL=*/60 * * * * *
