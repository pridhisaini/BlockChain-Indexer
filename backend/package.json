{
    "name": "btc-eth-indexer-backend",
    "version": "1.0.0",
    "description": "Production-grade BTC & ETH blockchain indexer backend",
    "main": "src/app.js",
    "type": "module",
    "scripts": {
        "start": "node src/app.js",
        "dev": "node --watch src/app.js",
        "indexer:eth": "node src/indexers/ethIndexer.js",
